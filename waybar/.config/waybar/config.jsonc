{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 40, // Fixed height to prevent resizing
    "spacing": 0, // Gaps between modules (4px)
    "margin-top": 0,
    "margin-right": 0,
    "margin-left": 0,
    "margin-bottom": 0,
    // Choose the order of the modules
    "modules-left": [],
    "modules-center": [
        "clock",
        "hyprland/workspaces",
        "custom/volume",
        // "wireplumber",
        "battery"
    ],
    "modules-right": [],
    "hyprland/workspaces": {
        "format": "{id}",
        "disable-scroll": true,
        "all-outputs": false,
        "tooltip": false
    },
    "clock": {
        "format": "{:%H:%M} ",
        "tooltip": false,
        "format-alt": "{:%Y-%m-%d}"
    },
    // "cpu": {
    //     "interval": 1,
    //     "format": "{usage}% ",
    //     "tooltip": false
    // },
    // "memory": {
    //     "interval": 2,
    //     "format": "{}% "
    // },
    "battery": {
        "interval": 5,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        // "format": "{capacity}% {icon}",
        // "tooltip-format": "{capacity}% {icon}",
        "format": "{icon}",
        // "format-charging": "{capacity}% 󱐋",
        "format-charging": "󱐋",
        // "format-plugged": "{capacity}% ",
        "format-warning": "{capacity}% {icon}",
        "format-critical": "{capacity}% {icon}",
        // "format-plugged": "",
        "format-plugged": "",
        "format-alt": "{capacity}% {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "custom/volume": {
        "exec": "~/.config/scripts/volume-wireplumber.sh",
        "interval": 1,
        "return-type": "json",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "tooltip": true
    },
    "wireplumber": {
        // "format": "{volume}% {icon}",
        "format": "{icon}",
        "format-muted": "",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "format-icons": [
            "",
            "",
            ""
        ],
        "tooltip-format": "{volume}%"
    }
}
